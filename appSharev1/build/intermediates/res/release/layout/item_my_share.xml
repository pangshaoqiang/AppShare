<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginTop="20dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/share_app_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_margin="4.0dip"
            android:src="@drawable/default_round_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/share_app_icon"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/share_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="张三"
                android:textSize="20.0sp" />

            <TextView
                android:id="@+id/share_app_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一句话"
                android:textSize="16.0sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30.0dip"
        android:background="@color/gray_white" >

        <ImageView
            android:id="@+id/fav_icon_small"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/comment_icon_small"
            android:layout_alignTop="@+id/comment_icon_small"
            android:layout_marginLeft="20dp"
            android:src="@drawable/more_icon_score_pressed" >
        </ImageView>

        <TextView
            android:id="@+id/fav_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4.0dp"
            android:layout_toRightOf="@+id/fav_icon_small"
            android:singleLine="true"
            android:text="10"
            android:textColor="@color/black"
            android:textSize="10.0sp" />

        <ImageView
            android:id="@+id/comment_icon_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20.0dp"
            android:layout_toRightOf="@+id/fav_num"
            android:src="@drawable/forum_icon_comment_small" >
        </ImageView>

        <TextView
            android:id="@+id/comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4.0dp"
            android:layout_toRightOf="@+id/comment_icon_small"
            android:singleLine="true"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="10.0sp" />

        <TextView
            android:id="@+id/share_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:singleLine="true"
            android:text="2015-5-01 17:45"
            android:textColor="@color/black"
            android:textSize="10.0sp" />

    </RelativeLayout>

</LinearLayout>
