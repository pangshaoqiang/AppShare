<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/main_bg_shape">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical" >
        <com.appshare.RoundImageView
            android:id="@+id/left_menu_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_head"
            android:padding="2.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/default_round_head" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView style="@style/left_drawer_item_line" />

            <RelativeLayout
                android:id="@+id/nick_name_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25.0dip"
                    android:layout_marginRight="25.0dip"
                    android:text="昵称"
                    android:textSize="20.0sp" />

                <TextView
                    android:id="@+id/nick_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="14.0dip"
                    android:layout_toRightOf="@id/nick_name"
                    android:gravity="center_horizontal"
                    android:text="张三"
                    android:textColor="@color/black"
                    android:textSize="20.0sp" />
            </RelativeLayout>

            <ImageView style="@style/left_drawer_item_line" />

            <RelativeLayout
                android:id="@+id/user_name_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25.0dip"
                    android:layout_marginRight="25.0dip"
                    android:text="账户"
                    android:textSize="20.0sp" />

                <TextView
                    android:id="@+id/user_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="14.0dip"
                    android:layout_toRightOf="@id/user_name"
                    android:gravity="center_horizontal"
                    android:text="test"
                    android:textColor="@color/black"
                    android:textSize="20.0sp" />
            </RelativeLayout>

            <ImageView style="@style/left_drawer_item_line" />

            <RelativeLayout
                android:id="@+id/sex_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25.0dip"
                    android:layout_marginRight="25.0dip"
                    android:text="性别"
                    android:textSize="20.0sp" />

                <TextView
                    android:id="@+id/sex_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="14.0dip"
                    android:layout_toRightOf="@id/sex"
                    android:gravity="center_horizontal"
                    android:text="男"
                    android:textColor="@color/black"
                    android:textSize="20.0sp" />
            </RelativeLayout>

            <ImageView style="@style/left_drawer_item_line" />

            <RelativeLayout
                android:id="@+id/sign_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25.0dip"
                    android:layout_marginRight="25.0dip"
                    android:text="个性签名"
                    android:textSize="20.0sp" />

                <TextView
                    android:id="@+id/sign_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="14.0dip"
                    android:layout_toRightOf="@id/sign"
                    android:gravity="center_horizontal|top"
                    android:maxLength="30"
                    android:text="男"
                    android:textColor="@color/black"
                    android:textSize="20.0sp" />
            </RelativeLayout>

            <ImageView style="@style/left_drawer_item_line" />

            <RelativeLayout
                android:id="@+id/favorite_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <Button
                    android:id="@+id/favorite_btn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/btn_common"
                    android:drawableLeft="@drawable/ic_drawer_favorite"
                    android:text="@string/left_drawer_item_favorite"
                    android:textColor="@color/white"
                    android:textSize="25.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/history_share_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/history_share_btn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/btn_common"
                    android:drawableLeft="@drawable/ic_drawer_offline"
                    android:text="分享"
                    android:textColor="@color/white"
                    android:textSize="25.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/offline_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/offline_btn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/btn_common"
                    android:drawableLeft="@drawable/ic_drawer_offline"
                    android:text="@string/left_drawer_item_offline"
                    android:textColor="@color/white"
                    android:textSize="25.0sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/E:/安卓学习/源码/AppShare%20v1.3/appSharev1/src/main/res/layout/left_drawer_fragment.xml -->